{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["global.d.ts", "src/**/*", "seeder"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
